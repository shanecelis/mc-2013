#!/bin/bash
# run-random-genomes
if [ $# -ne 3 ] && [ $# -ne 2 ]; then
    echo "usage: run-random-genomes <count> <dir> [range]" >&2;
    exit 2;
fi
count="$1";
dir="$2";

if [ -z "$3" ]; then
    range="1.0";
else
    range="$3";
fi
mkdir -p "$dir";
fode_genome_file="results-15/f2b-4f.dat";
#fode_genome_file="results-15/f2b-5a.dat";
#for physics in "fode-physics" "bullet-physics" "bullet-physics-car" "bullet-physics-skateboard-1" "bullet-physics-skateboard-2"; do
for physics in "bullet-physics-car" ; do
#for physics in "fode-physics" "bullet-physics-car" "bullet-physics-skateboard-2"; do
#for physics in "fode-physics"; do
    out="$dir/random-$physics.m"
    if [ ! -f "$out" ]; then
        eracs -s plot-random-genomes -r "$range" -p "<$physics>" "$fode_genome_file" $count "$out";
    else
        echo "skipping $out";
    fi
    out="$dir/random-$physics-sandwich.m"
    if [ ! -f "$out" ]; then
        eracs -s plot-random-genomes -r "$range" -p "<$physics>" -s "$fode_genome_file" $count "$out"
    else
        echo "skipping $out";
    fi
done
